<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <title>{% block title %}{% endblock %}</title>
    <meta http-equiv="content-type" content="text/html;charset=utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="rzrkEngine">
    <meta name="author" content="nerve">

    <!-- 框架样式及JS -->
    <script src="/media/js/jq/jquery-2.1.0.min.js"></script>
    <script src="/media/js/jq/jquery.form.min.js"></script>

    <link rel="stylesheet" type="text/css" href="/media/css/main.css">

    <!-- easy_dialog start -->
    <script src="/media/js/easydialog/easydialog.min.js" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="/media/js/easydialog/easydialog.css">
    <!-- easy_dialog end -->

    <!-- menu start -->
    <link rel="stylesheet" type="text/css" href="/media/js/menu2/menu.css">
    <script src="/media/js/menu2/scriptbreaker-multiple-accordion-1.js" type="text/javascript"></script>
    <!-- menu end -->

    <!-- tips start -->
    <script src="/media/js/tips/imagesloaded.pkg.min.js" type="text/javascript"></script>
    <script src="/media/js/tips/jquery.qtip.min.js" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="/media/js/tips/jquery.qtip.min.css">
    <!-- tips end -->

    <script type="text/javascript">
        // Textarea and select clone() bug workaround | Spencer Tipping
        (function (original) {
            jQuery.fn.clone = function () {
                var result = original.apply(this, arguments),
                        my_textareas = this.find('textarea').add(this.filter('textarea')),
                        result_textareas = result.find('textarea').add(result.filter('textarea')),
                        my_selects = this.find('select').add(this.filter('select')),
                        result_selects = result.find('select').add(result.filter('select'));

                for (var i = 0, l = my_textareas.length; i < l; ++i) $(result_textareas[i]).val($(my_textareas[i]).val());
                for (var i = 0, l = my_selects.length; i < l; ++i) {
                    for (var j = 0, m = my_selects[i].options.length; j < m; ++j) {
                        if (my_selects[i].options[j].selected === true) {
                            result_selects[i].options[j].selected = true;
                        }
                    }
                }
                return result;
            };
        })(jQuery.fn.clone);

        $(document).ready(function () {
            // 点击跳转到客户查看页面
            $('body').on('click', '.cus_name', function () {
                window.location.href = '/customer/view/?cus_id=' + $(this).attr('value');
            });
            //返回按钮
            $("#page_back").bind("click", function () {
                window.history.back();
            });
            //menu菜单
            /*
             $(".topnav").accordion({
             accordion: true,
             speed: 300,
             closedSign: '[+]',
             openedSign: '[-]'
             });
             */
            //tips
            $('span[title]').qtip({
                style: { classes: 'qtip-light' }
            });
            $('a[title]').qtip({
                style: { classes: 'qtip-light' }
            });
            //自定义弹出框关闭按钮
            $('.closeBtn_rzrk').bind('click', function () {
                $(this).parent().parent().parent().hide();
            });
            //登出方法
            $('.logout').bind('click', function () {
                window.location.href = '/logout/';
            });
        });

        function dialog_success(head, content, func, clost_time) {
            easyDialog.open({
                container: {
                    header: '[成功] ' + head,
                    content: content
                },
                overlay: false,
                autoClose: clost_time,
                callback: func
            });
        }

        function dialog_error(head, content, func) {
            easyDialog.open({
                container: {
                    header: '[失败] ' + head,
                    content: content
                },
                overlay: false,
                callback: func
            });
        }

        function dialog_confirm(header, content, yes_func) {
            easyDialog.open({
                container: {
                    header: header,
                    content: content,
                    yesFn: yes_func,
                    noFn: true
                },
                overlay: false
            });
        }
    </script>
    {% block rootJsAndCss %}
    {% endblock %}
</head>
{% load rzrk_tags %}
<body class="">
{% block root %}
    <div id="bodyDiv">
        <div id="rightMenuDiv">
            {% block rootBody %}
            {% endblock %}
        </div>
    </div>
    {% include "include/footer.html" %}
{% endblock root %}

</body>
</html>